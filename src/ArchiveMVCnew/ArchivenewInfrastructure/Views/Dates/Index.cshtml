@model IEnumerable<ArchivenewDomain.Model.Date>

@{
    ViewData["Title"] = "Index";
}

<h2>Main page</h2>

<p>
    <a asp-action="Create">Add new teacher</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Format)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtentOfMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date1)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Format)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtentOfMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DateId">Edit</a> |
                <a href="#" onclick="confirmDelete(@item.DateId)">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    function confirmDelete(dateId) {
        if (confirm("Are you sure you want to delete this?")) {
            document.getElementById('deleteForm_' + dateId).submit();
        }
    }
</script>

@foreach (var item in Model)
{
    <form id="deleteForm_@item.DateId" method="post" asp-action="Delete" asp-route-id="@item.DateId">
        <input type="hidden" name="id" value="@item.DateId" />
        @Html.AntiForgeryToken()
    </form>
}
