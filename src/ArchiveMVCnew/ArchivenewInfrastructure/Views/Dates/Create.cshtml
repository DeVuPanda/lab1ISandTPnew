@model ArchivenewDomain.Model.Date

@{
    ViewData["Title"] = "Create";
}

<h1>Add</h1>

<h4>Data</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty" class="control-label"></label>
                <select asp-for="Faculty" class="form-control" id="facultySelect">
                    <option value="Географічний">Географічний</option>
                    <option value="Економічний">Економічний</option>
                    <option value="Історичний">Історичний</option>
                    <option value="Механіко-математичний">Механіко-математичний</option>
                    <option value="Інформаційних технологій">Інформаційних технологій</option>
                    <option value="Комп'ютерних наук та кібернетики">Комп'ютерних наук та кібернетики</option>
                    <option value="Психології">Психології</option>
                    <option value="Радіофізики, електроніки та комп'ютерних систем">Радіофізики, електроніки та комп'ютерних систем</option>
                    <option value="Соціології">Соціології</option>
                    <option value="Фізичний">Фізичний</option>
                </select>
                <span asp-validation-for="Faculty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <select asp-for="Department" class="form-control" id="departmentSelect">
                <option value="">Choose department (optionally)</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Format" class="control-label"></label>
                <input asp-for="Format" class="form-control" />
                <span asp-validation-for="Format" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtentOfMaterial" class="control-label"></label>
                <input asp-for="ExtentOfMaterial" class="form-control" type="number" min="1" />
                <span asp-validation-for="ExtentOfMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date1" class="control-label"></label>
                <input asp-for="Date1" class="form-control" type="date" min="1700-01-01" max="2024-03-17" />
                <span asp-validation-for="Date1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var departmentOptions = {
            'Географічний': ['Кафедра географії України', 'Кафедра геоморфології та картографії', 'Кафедра ландшафтознавства та геоекології', 'Кафедра метеорології та кліматології', 'Кафедра океанології та гідрології', 'Кафедра фізичної географії та геоекології', 'Кафедра економічної та соціальної географії', 'Кафедра туризму'],
            'Економічний': ['Кафедра економічної теорії', 'Кафедра історії економічної думки', 'Кафедра світового господарства та міжнародних економічних відносин', 'Кафедра економіки та менеджменту підприємств', 'Кафедра маркетингу', 'Кафедра обліку та аудиту', 'Кафедра фінансів, банківської справи та страхування', 'Кафедра статистики та економетрії'],
            'Історичний': ['Кафедра історії України', 'Кафедра всесвітньої історії', 'Кафедра археології та музеєзнавства', 'Кафедра етнології та фольклористики', 'Кафедра джерелознавства та спеціальних історичних дисциплін', 'Кафедра історіографії та спеціальних історичних дисциплін', 'Кафедра історії та культури зарубіжних країн', 'Кафедра методики викладання історії'],
            'Механіко-математичний': ['Кафедра алгебри та математичної логіки', 'Кафедра аналізу та диференціальних рівнянь', 'Кафедра геометрії та топології', 'Кафедра теорії ймовірностей та математичної статистики', 'Кафедра математичної фізики', 'Кафедра прикладної математики', 'Кафедра механіки', 'Кафедра комп\'ютерної математики'],
            'Інформаційних технологій': ['Кафедра системного аналізу та комп\'ютерного моделювання', 'Кафедра інформаційних систем та технологій', 'Кафедра комп\'ютерних наук', 'Кафедра прикладної математики та програмування', 'Ка'],
            'Комп\'ютерних наук та кібернетики': ['Кафедра комп\'ютерних наук', 'Кафедра системного програмування', 'Кафедра штучного інтелекту', 'Кафедра кібернетики', 'Кафедра прикладної математики', 'Кафедра комп\'ютерної інженерії'],
            'Психології': ['Кафедра загальної психології', 'Кафедра вікової та педагогічної психології', 'Кафедра соціальної та організаційної психології', 'Кафедра психології особистості', 'Кафедра практичної психології', 'Кафедра психології розвитку людини'],
            'Радіофізики, електроніки та комп\'ютерних систем': ['Кафедра загальної фізики', 'Кафедра теоретичної радіофізики', 'Кафедра радіофізики та електроніки', 'Кафедра фізики напівпровідників та напівпровідникових приладів', 'Кафедра квантової електроніки', 'Кафедра мікро- та наноелектроніки', 'Кафедра комп\'ютерних систем та мереж'],
            'Соціології': ['Кафедра загальної соціології', 'Кафедра історії соціології', 'Кафедра методології та методів соціологічних досліджень', 'Кафедра соціології політики', 'Кафедра соціології економіки та праці', 'Кафедра соціології міста та регіонів', 'Кафедра соціології сім\'ї та молоді', 'Кафедра прикладної соціології'],
            'Фізичний': ['Кафедра експериментальної фізики', 'Кафедра загальної фізики', 'Кафедра теоретичної фізики', 'Кафедра ядерної фізики', 'Кафедра астрономії']
        };

        function updateDepartmentOptions() {
            var faculty = document.getElementById('facultySelect').value;
            var departmentSelect = document.getElementById('departmentSelect');

            departmentSelect.innerHTML = '';

            var defaultOption = document.createElement('option');
            defaultOption.value = '';
            defaultOption.text = 'Do not add the department';
            departmentSelect.appendChild(defaultOption);

            if (faculty in departmentOptions) {
                departmentOptions[faculty].forEach(function (department) {
                    var option = document.createElement('option');
                    option.value = department;
                    option.text = department;
                    departmentSelect.appendChild(option);
                });
            }
        }
        updateDepartmentOptions();
        document.getElementById('facultySelect').addEventListener('change', updateDepartmentOptions);
    </script>
}

